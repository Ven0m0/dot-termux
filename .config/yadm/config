# Yadm Configuration for Termux
# Optimized for performance and security in $HOME
[yadm]
  auto-bootstrap = true
  auto-alt = true
  auto-perms = true        # Secure: Enforces 600/700 permissions on .ssh, .gnupg, etc.
[core]
  excludesfile = ~/.yadmignore
  # Performance Optimizations
  untrackedCache = true    # Caches file status to speed up subsequent checks
  preloadIndex = true      # Parallelizes index operations
  compression = 1          # Fast compression (matches your .gitconfig)
  # Safety
  logAllRefUpdates = true
[status]
  # CRITICAL OPTIMIZATION: 
  # 'all' scans your entire internal storage. 'no' makes 'yadm status' instant.
  # Use 'yadm add -f <file>' to track new files manually.
  showUntrackedFiles = no  
  submoduleSummary = true
[push]
  default = current
[pull]
  rebase = true
[alias]
  # Productivity shortcuts
  s = status -s
  c = commit -v
  p = push
  up = pull --rebase
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
